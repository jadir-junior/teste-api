  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API",
      "args": ["src/main.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
      //   "program": "${workspaceFolder}\\src\\users\\users.module.ts",
      //   "preLaunchTask": "tsc: build - tsconfig.json",
      //   "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
